{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHeader": "Renovate Dependency Update",
  "assignees": [
    "jk-signature",
    "miguelbper",
    "FredOliveira-Signature",
    "pbouda",
    "marcosignature",
    "ZenKetse"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "python"
      ],
      "fileMatch": [
        "(^|/)pyproject\\.toml$"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "automerge": false,
      "labels": [
        "dependencies"
      ],
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "breaking"
      ],
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "labels": [
        "testing"
      ],
      "matchPackageNames": [
        "/^pytest/"
      ]
    }
  ],
  "enabledManagers": [
    "pep621"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "schedule": [
    "before 5pm"
  ],
  "prConcurrentLimit": 4,
  "prCreation": "not-pending",
  "minimumReleaseAge": "3 days",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ML Dependency Dashboard",
  "commitMessage": "‚¨ÜÔ∏è Renovate dependency update",
  "prTitle": "üì¶ Signature Nodes dep: Update {{{depName}}} from {{currentVersion}} to {{newVersion}}",
  "labels": [
    "dependencies"
  ]
}
